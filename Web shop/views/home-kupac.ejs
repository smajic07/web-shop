    <h3>Popularni artikli/usluge</h3>
    <div class="container">
      <div id="popularni" class="pozadinaKartica row justify-content-center">
        <div style="display: block; margin-right: 5px;" class="btn-group">
          <i style="float: right; font-size: 24px;" class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            <span>Sortiraj</span>
          </i>
          <ul class="dropdown-menu">
            <li>
              <a class="dropdown-item" onclick="sortiraj1('ime')">Po imenu</a>
            </li>
            <li>
              <a class="dropdown-item" onclick="sortiraj1('raste')">Po cijeni <b><span style="font-size: 20px;">&#x2191</span></b></a>
            </li>
            <li>
              <a class="dropdown-item" onclick="sortiraj1('opada')">Po cijeni <b><span style="font-size: 20px;">&#x2193</span></b></a>
            </li>
          </ul>
        </div>
        <%for(let i=0; i<popularArticles.length; i++){%>
        <div class="kartica col-md-6 col-xl-3">
          <div class="card">
            <img src="<%=popularArticles[i].picture%>" class="card-img-top" alt="slika artikla">

            <div class="card-body">
              <h5 class="card-title"><%=popularArticles[i].article_name%></h5>
              <p class="card-text"><%=popularArticles[i].description%></p>
              <span class="preostalo">Preostalo: <%=popularArticles[i].quantity%></span>
              <span class="cijena">Cijena: <%=popularArticles[i].unit_price%> KM</span><br><br>
              <div>
                <%for(let j=1; j<popularArticles[i].kategorije.length; j++){%>
                <span class="kategorija"><%=popularArticles[i].kategorije[j][1]%></span>
                <%}%>
              </div>
            </div>
            <div class="nazivKompanije" onclick="posjetiArtikl('<%=popularArticles[i].id%>')">Saznaj više</div>
          </div>
        </div>
        <%}%>
      </div>
    </div>

