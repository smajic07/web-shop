                    <span class="kategorija" style="float: left;"><%=recommendedArticles[i].kategorije[j][1]%></span>
                  <%}%>
                </div>
              </div>
              <div class="nazivKompanije" onclick="posjetiArtikl('<%=recommendedArticles[i].id%>')">Saznaj više</div>
            </div>
          </div>
        <%}%>
      </div>
    </div>

    <script>
      function posjetiArtikl(id_artikla){
        location.assign('/kupac/artikl/' + id_artikla);
      }
      document.getElementById("searchInput").addEventListener('keypress', function (e) {
        if (e.key === 'Enter') {
          pretrazi();
        }
      });
    </script>

